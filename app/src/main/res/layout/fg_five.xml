<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Profile"
            android:textColor="@color/black_alpha_80"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FCFCFC">

        <ImageView
            android:id="@+id/userAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/user1"/>

        <TextView
            android:id="@+id/nickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userAvatar"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="@color/black_alpha_80"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/photoTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nickName"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/black_alpha_60"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photoTime"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_download"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_download_big"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="下载"
                    android:textColor="@color/black_alpha_80"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_share"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="分享"
                    android:textColor="@color/black_alpha_80"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_wallpaper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_pic_wall"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="壁纸"
                    android:textColor="@color/black_alpha_80"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:background="@color/black_alpha_20"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="详情"
            android:textColor="@color/black_alpha_80"
            android:textSize="14sp"/>

        <TextView
            android:text="用户ID"
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/detail_title"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/black_alpha_80"
            android:textSize="14sp"/>


        <TextView
            android:text="用户名"
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/user_id"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/black_alpha_80"
            android:textSize="14sp"/>

        <View
            android:id="@+id/view_color"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignRight="@+id/user_name"
            android:layout_below="@+id/user_id"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"/>



        <TextView
            android:text="电话"
            android:id="@+id/moblie_phone"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/black_alpha_80"
            android:textSize="14sp"/>


        <TextView
            android:text="邮箱"
            android:id="@+id/e_mail"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_below="@+id/moblie_phone"
            android:layout_marginLeft="15dp"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/black_alpha_80"
            android:textSize="14sp"/>

    </LinearLayout>
</LinearLayout>