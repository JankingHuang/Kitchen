<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FCFCFC">

        <ImageView
            android:id="@+id/userAvatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/user1"/>

        <TextView
            android:id="@+id/nickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userAvatar"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="@color/black_alpha_80"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/photoTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nickName"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/black_alpha_60"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photoTime"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_theme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_color_lens_black_48dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="切换主题"
                    android:textColor="@color/black_alpha_80"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_user_infor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_edit_black_48dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="编辑个人信息"
                    android:textColor="@color/black_alpha_80"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_delete_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_delete_forever_black_48dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="注销用户"
                    android:textColor="@color/black_alpha_80"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:background="@color/black_alpha_20"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="详情"
            android:textColor="@color/black_alpha_80"
            android:textSize="14sp"/>

        <TextView
            android:text="用户ID"
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/detail_title"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/black_alpha_80"
            android:textSize="14sp"/>


        <TextView
            android:text="用户名"
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/user_id"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/black_alpha_80"
            android:textSize="14sp"/>

        <View
            android:id="@+id/view_color"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignRight="@+id/user_name"
            android:layout_below="@+id/user_id"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"/>



        <TextView
            android:text="电话"
            android:id="@+id/moblie_phone"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/black_alpha_80"
            android:textSize="14sp"/>


        <TextView
            android:text="邮箱"
            android:id="@+id/e_mail"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_below="@+id/moblie_phone"
            android:layout_marginLeft="15dp"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/black_alpha_80"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>